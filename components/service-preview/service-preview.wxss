@import '../../iconfont/index.wxss';
.container {
  display: flex;
  width: 100%;
  height: 200rpx;
  margin: 30rpx;
}

.left {
  display: flex;
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  position: relative;
  border-radius: 30rpx;
}

.left-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.left-find {
  position: absolute;
  font-size: 16rpx;
  right: 0;
  top: 0;
  padding: 14rpx;
  color: #ffffff;
  background-color:#333;
  border-top-right-radius: 10rpx;
}

.right {
  display: flex;
  flex-direction: column;
  width: 450rpx
}

.right-title {
  max-width: 300rpx;
  margin-right: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.right-property {
 display: flex;
 text-align: center;
}


.right-property-content {
  font-size: 20rpx;
  margin-left: 5rpx;
}

.right-user-avater {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.last-row {
  justify-content: space-between;
}